# =================================
# MYSHOP ADMIN PORTAL - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values
# =================================

# =================================
# DATABASE CONFIGURATION
# =================================
# PostgreSQL database connection string (NeonDB format)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require&channel_binding=require

# =================================
# SERVER CONFIGURATION
# =================================
# Port for the backend server to run on
PORT=3000

# Backend server base URL (used for MoMo callbacks)
# IMPORTANT: Change this in production!
# Local: http://localhost:3000
# Render: https://your-app-name.onrender.com
SERVER_BASE_URL=http://localhost:3000

# Frontend admin portal URL
# Local: http://localhost:5173
# Vercel: https://your-frontend.vercel.app
ADMIN_PORTAL_URL=http://localhost:5173

# =================================
# MOMO PAYMENT GATEWAY
# =================================
# MoMo partner credentials (test environment)
MOMO_PARTNER_CODE=MOMO
MOMO_ACCESS_KEY=F8BBA842ECF85
MOMO_SECRET_KEY=K951B6PE1waDMi640xX08PD3vg6EkVlz

# MoMo callback URLs (automatically constructed from SERVER_BASE_URL)
MOMO_REDIRECT_URL=http://localhost:3000/callback-momo/redirect
MOMO_IPN_URL=http://localhost:3000/callback-momo/ipn-url

# =================================
# EMAIL SERVICE (BREVO)
# =================================
# Brevo API key for sending emails
BREVO_API_KEY=your-brevo-api-key-here

# Email sender information
EMAIL_SENDER_NAME=MyShop2025
EMAIL_SENDER_EMAIL=your-sender-email@domain.com

# =================================
# EXTERNAL API (OPTIONAL)
# =================================
# External token generation service URL (leave empty to use internal generator)
EXTERNAL_API_BASE_URL=

# =================================
# SECURITY & CORS
# =================================
# Allowed origins for CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =================================
# APPLICATION SETTINGS
# =================================
# Premium code price in VND
PREMIUM_PRICE=199000

# Trial code expiry days
TRIAL_EXPIRY_DAYS=15

# =================================
# NOTES:
# =================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. DATABASE_URL is the most critical - get this from your NeonDB dashboard
# 4. BREVO_API_KEY is required for email functionality
# 5. MoMo credentials shown are for test environment only
# 6. Make sure SERVER_BASE_URL matches your actual deployment URL in production